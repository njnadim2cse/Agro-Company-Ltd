<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- People list View -->
    <record id="view_gatepass_people_list" model="ir.ui.view">
        <field name="name">gatepass.people.list</field>
        <field name="model">gatepass.people</field>
        <field name="arch" type="xml">
            <list string="People">
                <field name="name"/>
                <field name="id_type"/>
                <field name="id_number"/>
                <field name="mobile"/>
            </list>
        </field>
    </record>

    <!-- People Form View -->
    <record id="view_gatepass_people_form" model="ir.ui.view">
        <field name="name">gatepass.people.form</field>
        <field name="model">gatepass.people</field>
        <field name="arch" type="xml">
            <form string="Person">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="id_type"/>
                        <field name="id_number"/>
                        <field name="mobile"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>